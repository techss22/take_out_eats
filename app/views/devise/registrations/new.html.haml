.account
  .account__box
    .userbox
      %h2 新規登録入力画面
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .accountfield
          = f.label :メールアドレス
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"xxx@test.com", size: "30x30"
        .accountfield
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder:"任意のパスワード", size: "30x30"
        .accountfield
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"再入力", size: "30x30"
        .actions
          = f.submit "新規登録"
      = render "devise/shared/links"
